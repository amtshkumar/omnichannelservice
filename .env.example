# Application Environment
APP_ENV=development
APP_PORT=3000
APP_HOST=0.0.0.0

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=notification_user
DB_PASSWORD=notification_pass
DB_DATABASE=notification_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# SendGrid Configuration (Email Provider)
SENDGRID_API_KEY=

# Twilio Configuration (SMS Provider)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# OneSignal Configuration (Push Notifications - Future)
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Encryption Key for Credentials (32 characters)
ENCRYPTION_KEY=change-this-32-char-encryption-key-prod

# Admin UI URL
ADMIN_UI_URL=http://localhost:5173

# Logging
LOG_LEVEL=debug
