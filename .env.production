# Application Environment
APP_ENV=production
APP_PORT=3000
APP_HOST=0.0.0.0

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=notification_user
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
DB_DATABASE=notification_db
DB_SYNCHRONIZE=false
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=https://your-admin-ui-domain.com

# SendGrid Configuration (Email Provider)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY

# Twilio Configuration (SMS Provider)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN

# OneSignal Configuration (Push Notifications - Future)
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Encryption Key for Credentials (32 characters)
ENCRYPTION_KEY=CHANGE_THIS_32_CHAR_ENCRYPTION_KEY

# Admin UI URL
ADMIN_UI_URL=https://your-admin-ui-domain.com

# Logging
LOG_LEVEL=info
